{
  "name": "OnlyKey Configuration",
  "manifest_version": 2,
  "version": "3.0.0.0",
  "version_name": "0.2-beta.0",
  "minimum_chrome_version": "45.0.2439.3",
  "app": {
    "background": {
      "scripts": [ "main.js" ],
      "persistent": false
    }
  },
  "permissions": [
    "node",
    "hid",
    {
      "usbDevices": [
        { "vendorId": 5824, "productId": 1158 }
      ]
    }
  ],
  "icons": {
      "16": "onlykey_logo_16.png",
      "48": "onlykey_logo_48.png",
      "128": "onlykey_logo_128.png"
  }
}
